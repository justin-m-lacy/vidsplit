{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "app",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "noErrorTruncation": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "assets/dist",
    "node_modules"
  ],
  "include": [
    "electron",
    "shared",
    "electron/**/*.ts"
  ]
}